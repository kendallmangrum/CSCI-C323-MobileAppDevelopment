<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Final_Project" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/finalLightGray</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:dialogTheme">@style/CustomAlerts</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomAlerts" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Style for positive button -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle.textColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle.textColor</item>
        <item name="android:windowBackground">@color/finalLighterDark</item>
    </style>

    <style name="PositiveButtonStyle.textColor" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/finalYellow</item>
    </style>

    <style name="NegativeButtonStyle.textColor" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/genericWhite</item>
    </style>

    <style name="spinnerCustom">
        <item name="android:textColor">@color/finalDark</item>
        <item name="android:background">@color/finalLightGray</item>
    </style>

</resources>